# URL base usada para redirecionamentos e CSP
APP_BASE_URL=https://winove.com.br
PORT=3333

# Credenciais do banco usadas pelo pool MySQL
DB_HOST=<database-host>
DB_PORT=<database-port>
DB_NAME=<database-name>
DB_USER=<database-user>
DB_PASSWORD=<database-password>
DB_CONN_LIMIT=10

# Proteção do painel comercial (/comercial-propostas e /api/propostas)
COMMERCIAL_PANEL_USERNAME=comercial
# Defina uma senha forte para liberar o painel
COMMERCIAL_PANEL_PASSWORD=

# Configuração SMTP para envio opcional de notificações
MAIL_HOST=smtp.exemplo.com
MAIL_PORT=587
MAIL_USER=usuario-smtp
MAIL_PASS=senha-smtp
MAIL_FROM="Winove <no-reply@exemplo.com>"
CONTACT_EMAIL=comercial@winove.com.br
